<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="club.jiaopu.dao.ApplicantDao">  
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->  
    <resultMap id="BaseResultMap" type="club.jiaopu.domain.Applicant">  
        <id column="a_id" property="a_Id" jdbcType="INTEGER" />  
        <result column="a_uname" property="a_Uname" jdbcType="CHAR" />  
        <result column="a_pwd" property="a_Pwd" jdbcType="CHAR" />  
        <result column="a_email" property="a_Email" jdbcType="CHAR" />
        <result column="a_phoneNumber" property="a_PhoneNumber" jdbcType="CHAR" /> 
        <result column="a_thirdAccount" property="a_ThirdAccount" jdbcType="CHAR" />   
    </resultMap>  
    <!-- 查询单条记录 -->  
    <select id="selectApplicantById" parameterType="int" resultMap="BaseResultMap">  
        SELECT * FROM applicant WHERE a_id = #{a_Id}  
    </select>  
</mapper>  